@page
@model IndexModel
@using MiikkaStore.WebSite
@{
    ViewData["Title"] = "Home page";
    var index = 0;
}

<h2>Products</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Info</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                index++;
                <tr>
                    <th scope="row">@index</th>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td><button class="btn btn-primary">More info</button></td>
                </tr>
            }
        </tbody>
    </table>